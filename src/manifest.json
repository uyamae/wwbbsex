{
    "manifest_version" : 2,
    "author" : "uyamae",
    "name" : "wwbbsex",
    "description" : "人狼BBS 拡張",
    "version" : "1.0",
    "icons" : {
        "32" : "icon_32.png",
        "48" : "icon_48.png",
        "128" : "icon_128.png"
    },
    "content_scripts" : [{
        "matches" : ["http://www.wolfg.x0.com/index.rb?vid=*"],
        "js" : ["utilities.js", "content_scripts.js"],
        "css" : ["content_scripts.css"]
    }],
    "background" : {
        "scripts" : ["background.js"]
    },
    "browser_action" : {
        "default_icon" : "icon_32.png",
        "default_title" : "人狼BBS 拡張",
        "default_popup" : "popup.html"
    },
    "permissions" : [
        "tabs",
        "background",
        "http://*/*",
        "https://*/*"
    ]
}
